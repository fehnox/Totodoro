{
  "name": "totodoro",
  "version": "1.0.0",
  "description": "Totodoro - Pomodoro Timer App",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "keywords": ["pomodoro", "totoro", "timer", "productivity"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.totodoro.app",
    "productName": "Totodoro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "favicon_totoro.ico"
    }
  }
}
